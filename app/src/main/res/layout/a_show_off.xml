<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            style="@style/CardViewTitle">
            <TextView
                style="@style/TitleLabel"
                android:text="Title"/>
            <TextView
                style="@style/ContentLabelLight"
                android:text="ContentLight"/>
        </LinearLayout>

        <LinearLayout
            style="@style/CardViewBody">
            <TextView
                style="@style/TitleLabelDark"
                android:text="TitleDark"/>
            <TextView
                style="@style/ContentLabel"
                android:text="Content"/>
        </LinearLayout>

        <include layout="@layout/view_divider"/>

        <LinearLayout
            style="@style/CardViewBody">
            <RadioGroup
                style="@style/RadioGroup">
                <android.support.v7.widget.AppCompatRadioButton
                    style="@style/RadioButton"
                    android:text="Option" />
            </RadioGroup>
        </LinearLayout>

        <include layout="@layout/view_divider"/>

        <LinearLayout
            style="@style/CardViewFooter">
            <Button
                style="@style/Button"
                android:text="@string/app_name"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>